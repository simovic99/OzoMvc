@model ReferentniTip

@{
    ViewBag.Title = "Novi rferentni tip";
}
    <div id="main">
        <h2>Unos novog referentnog tipa</h2>

        <form asp-action="Create" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Naziv"></label>
                <div><span asp-validation-for="Naziv" class="text-danger" /></div>
                <input asp-for="Naziv" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Cijena"></label>
                <div><span asp-validation-for="Cijena" class="text-danger" /></div>
                <input asp-for="Cijena" class="form-control" />
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">Dodaj</button>
                <a asp-action="Index" class="btn btn-secondary">Odustani</a>
            </div>
        </form>
    </div>
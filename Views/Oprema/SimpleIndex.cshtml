@model IEnumerable<OzoMvc.Models.Oprema>

@{
    ViewData["Title"] = "Popis Opreme";
}
<table class="table table-sm table-striped table-hover" id="tableoprema">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Kupovna vrijednost</th>
            <th>Knjigovodstvena vrijednost</th>
            <th>Vrijeme amortizacije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var oprema in Model)
        {
            <tr>
                <td class="text-center">@oprema.Naziv</td>
                <td class="text-left">@oprema.KupovnaVrijednost</td>
                <td class="text-left">@oprema.KnjigovodstvenaVrijednost</td>
                <td class="text-left">@oprema.VrijemeAmortizacije</td>
            </tr>
        }
    </tbody>
</table>
@section styles{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap4.min.css" />
}
@section scripts{
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tableoprema').DataTable({
                language: {
                    search: "Pretraga",
                    info: "_START_ - _END_ (ukupno _TOTAL_)",
                    lengthMenu: "Prikaži _MENU_ zapisa",
                    paginate: {
                        first: "Prva",
                        previous: "Prethodna",
                        next: "Sljedeća",
                        last: "Zadnja"
                    },
                    emptyTable: "Nema podataka za prikaz",
                    info: "_START_ - _END_ od ukupno _TOTAL_ zapisa",
                    infoEmpty: "Nema podataka za prikaz",
                    infoFiltered: "(filtrirano od ukupno _MAX_ zapisa)",
                    zeroRecords: "Ne postoje traženi podaci"
                }
            });
        });
    </script>
}
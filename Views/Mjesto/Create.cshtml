@model Mjesto
  @{
  ViewData["Title"] = "Nova mjesto";
}
  
  <div id="main">
    <h3>Unesite novo mjesto</h3>
  <form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Naziv"></label>
        <div><span asp-validation-for="Naziv" class="text-danger" /></div>
        <input asp-for="Naziv" class="form-control"/>
    </div>
   
    <div class="form-group">
    <label asp-for="GradId"></label>
    <div><span asp-validation-for="GradId" class="text-danger"></span>
    <a href="/Grad/Create" class="float-right black">Dodaj grad</a></div>
    <select class="form-control" asp-for="GradId" asp-items="ViewBag.Gradovi">
      <option disabled selected value="">Odaberite grad</option>
    </select>
    </div>
    <div class="text-center">
        <button class="btn btn-dark" type="submit" >Dodaj</button>
        <a asp-action="Index" class="btn btn-secondary">Sva mjesta</a>
    </div>

</form>
</div>

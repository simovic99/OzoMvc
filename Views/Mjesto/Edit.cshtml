@model Mjesto
@{
    ViewData["Title"]="AÅ¾uriranje mjesta";
}

<div id="main">
    <h3>Unesite novo mjesto</h3>
<form
    asp-route-page="@ViewBag.Page"
    asp-route-sort="@ViewBag.Sort"
    asp-route-ascending="@ViewBag.Ascending"
    asp-action="Edit"
    method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Naziv"></label>
        <div><span asp-validation-for="Naziv" class="text-danger"></span></div>
        <input asp-for="Naziv" class="form-control"/>
    </div>
   
    <div class="form-group">
        <label asp-for="GradId"></label>
        <div><span asp-validation-for="GradId" class="text-danger"></span></div>
        <select class="form-control" asp-for="GradId" asp-items="ViewBag.Gradovi">
            <option disabled selected value="">Odaberite mjesto</option>
        </select>
    </div>
   <div class="text-center">
    <button class="btn btn-dark" type="submit">Spremi</button>
    <a asp-action="Index"
       asp-route-page="@ViewBag.Page"
       asp-route-sort="@ViewBag.Sort"
       asp-route-ascending="@ViewBag.Ascending"
       class="btn btn-secondary">Odustani</a>
  </div>

</form>
</div>
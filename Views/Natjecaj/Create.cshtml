@model NatjecajViewModel
@{
    ViewBag.Title = "Unos novog natječaja";
}

<h3>Unos novog natječaja</h3>

<div class="container">
  
    <form asp-action="Create" method="post" id="natjecaj_form">
      <div class="move">
        <div asp-validation-summary="All" class="form-group row"></div>

        <div class="form-group row">
            <label asp-for="TrajanjeOd" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="TrajanjeOd" class="form-control datum"  />
            </div>
            <label asp-for="TrajanjeDo" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="TrajanjeDo" class="form-control datum" />
            </div>
            <label asp-for="Opis"></label>
            <div class="col-sm-3">
                <input asp-for="Opis" class="form-control" />
            </div>
            </div>
            <div class="form-group row">
            <label asp-for="Cijena" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="Cijena" class="form-control" />
            </div>
            <label asp-for="UslugaId"></label>
            <div ></div>
            <div class="col-sm-2">
            <select class="form-control" asp-for="UslugaId" asp-items="ViewBag.Usluga">
            <option disabled selected value="">Odaberite uslugu</option>
            </select>
            </div>
           
            <div class="col-sm-2">
                <button id="save" type="submit" class="btn btn-sm btn-dark save" title="Spremi"><i class="fas fa-save"></i></button>
                <a class="btn btn-sm btn-secondary cancel" asp-action="Index" title="Odustani">
                    <i class="fas fa-undo-alt"></i>
                </a>
            </div>
        </div>
        </div>


        <div class="col-sm-10">
          <partial name="Stavke" model="Model.Stavke" />
        </div>
    </form>
    
</div>

@await Html.PartialAsync("NovaStavkaTemplate")

@section styles{
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
}

@section scripts{
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/lib/jqueryui/ui/i18n/datepicker-hr.js"></script>
    <script src="~/js/autocomplete.js"></script>
    <script src="~/js/natjecaj.js"></script>
}
@model Ponudjivaci

@{
  ViewBag.Title = "Novi ponuđivač";
}
 <div id="main">
<h3>Unesite novog ponuđivača</h3>

<form asp-action="Create" method="post">
 <div asp-validation-summary="All"></div>
 
  <div class="form-group">
    <label asp-for="Naziv"></label>
    <div><span asp-validation-for="Naziv" class="text-danger" /></div>
    <input asp-for="Naziv" class="form-control" />
 
  
  <div class="text-center" style="margin:50px;">
    <button class="btn btn-dark" type="submit">Dodaj</button>
    <a asp-action="Index" class="btn btn-secondary">Odustani</a>
  </div>
</form>
</div>
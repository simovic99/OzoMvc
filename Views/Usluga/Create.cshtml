@model Usluga

@{
  ViewBag.Title = "Nova usluga";
}
 <div id="main">
<h3>Unesite novu uslugu</h3>

<form asp-action="Create" method="post">
 <div asp-validation-summary="All"></div>
  <div class="form-group">
    <label asp-for="Naziv"></label>
    <div><span asp-validation-for="Naziv" class="text-danger" /></div>
    <input asp-for="Naziv" class="form-control" />
  </div>
 
  <div class="form-group">
    <label asp-for="Cijena"></label>
    <div><span asp-validation-for="Cijena" class="text-danger" /></div>
    <input asp-for="Cijena" class="form-control" />
  </div>
   <div class="form-group">
    <label asp-for="Opis"></label>
    <div><span asp-validation-for="Opis" class="text-danger" /></div>
    <input asp-for="Opis" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="NormativId"></label>
    <div><span asp-validation-for="NormativId" class="text-danger"></span></div>
    <select class="form-control" asp-for="NormativId" asp-items="ViewBag.Normativi">
      <option disabled selected value="">Odaberite normativ</option>
    </select>
  </div>
  
  <div class="text-center" style="margin:50px;">
    <button class="btn btn-dark" type="submit">Dodaj</button>
    <a asp-action="Index" class="btn btn-secondary">Odustani</a>
  </div>
</form>
</div>
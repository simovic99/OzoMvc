@model Usluga

@{
    ViewBag.Title = "AÅ¾uriranje usluge";
}
<div id="main">
    <h3>Unesite novu uslugu</h3>
<form asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      asp-route-filter="@ViewBag.Filter"
      method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Naziv"></label>
        <div><span asp-validation-for="Naziv" class="text-danger"></span></div>
        <input asp-for="Naziv" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cijena"></label>
        <div><span asp-validation-for="Cijena" class="text-danger"></span></div>
        <input asp-for="Cijena" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Opis"></label>
        <div><span asp-validation-for="Opis" class="text-danger"></span></div>
        <input asp-for="Opis" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NormativId"></label>
        <div><span asp-validation-for="NormativId" class="text-danger"></span></div>
        <select class="form-control" asp-for="NormativId" asp-items="ViewBag.Normativi">
            <option disabled selected value="">Odaberite normativ</option>
        </select>
    </div>
    <div class="text-center">
        <button class="btn btn-dark" type="submit">Spremi</button>
        <a asp-action="Index"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           asp-route-filter="@ViewBag.Filter"
           class="btn btn-secondary">Odustani</a>
    </div>
    
</form>
</div>
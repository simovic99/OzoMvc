@model Grad
  @{
  ViewBag.Title = "Novi grad";
}
<div id="main">
  <h3>Unesite novi grad</h3>
 

<form asp-action="Create" method="post" >
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Naziv"></label>
        <div><span asp-validation-for="Naziv" class="text-danger" /></div>
        <input asp-for="Naziv" class="form-control"/>
    </div>
    <br>
    <div class="text-center">
        <button class="btn btn-dark" type="submit" >Dodaj</button>
        <a asp-action="Index" class="btn btn-secondary">Svi gradovi</a>
    </div>

</form>
</div>